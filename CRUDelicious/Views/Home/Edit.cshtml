@{
    ViewData["Title"] = "Home Page";
}

@model Dish
<div>
    <div>
        <h1>Edit @ViewBag.One_Dish.Name</h1>
    </div>
    <div>
        <a href="/">Home</a> | <a href="/dishes/new">Add a Dish</a>
    </div>
    <form asp-action="UpdateDish" asp-route-id="@ViewBag.One_Dish.DishId" asp-controller="Home" method="post">
        <div>
            <label for="chef">Chef's Name</label>
            <input type="text" id="chef" asp-for="Chef" value="@ViewBag.One_Dish.Chef">
            <span asp-validation-for="Chef"></span>

            <label for="name">Name of Dish</label>
            <input type="text" id="name" asp-for="Name" value="@ViewBag.One_Dish.Name">
            <span asp-validation-for="Name"></span>

            <label for="calories"># of Calories</label>
            <input type="number" id="calories" asp-for="Calories" value="@ViewBag.One_Dish.Calories"
            min="10">
            <span asp-validation-for="Calories"></span>
        </div>
        <div>
            <label for="tastiness">Tastiness Lvl.</label>
            <select id="tastiness" asp-for="Tastiness" value="@ViewBag.One_Dish.Tastiness">
                <option>1</option>
                <option>2</option>
                <option>3</option>
                <option>4</option>
                <option>5</option>
            </select>
            <span asp-validation-for="Tastiness"></span>
        </div>
        <div>
            <label for="description">Description</label>
            <input type="text" id="description" asp-for="Description" value="@ViewBag.One_Dish.Description">
            <span asp-validation-for="Description"></span>

            <button type="submit">Edit Dish</button>
        </div>
        
    </form>
</div>