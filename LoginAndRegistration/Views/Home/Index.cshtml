@{
    ViewData["Title"] = "Home Page";
}
@model User
<div class="text-center">
    <div>
        <form asp-action="CreateUser" method="post">
            <div>
                <label for="">First Name</label>
                <input type="text" asp-for="FirstName">
                <span asp-validation-for="FirstName"></span>
            </div>
            <div>
                <label for="">Last Name</label>
                <input type="text" asp-for="LastName">
                <span asp-validation-for="LastName"></span>
            </div>
            <div>
                <label for="">Email</label>
                <input type="text" asp-for="Email">
                <span asp-validation-for="Email"></span>
            </div>
            <div>
                <label for="">Password</label>
                <input type="text" asp-for="Password">
                <span asp-validation-for="Password"></span>
            </div>
            <div>
                <label for="">PW Confirm</label>
                <input type="text" asp-for="PasswordConfirm">
                <span asp-validation-for="PasswordConfirm"></span>
            </div>
            <button type="submit">Register</button>
        </form>
    </div>
    <div>
        @await Html.PartialAsync("_LoginUserForm")
    </div>
</div>
