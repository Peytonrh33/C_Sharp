@{
    ViewData["Title"] = "Home Page";
}

@model Wedding
<div>
    <div>
        @await Html.PartialAsync("_Navbar")
    </div>
    <div>
        <form asp-action="CreateWedding" method="post">
            <div>
                <label>Wedder One:</label>
                <input type="text" asp-for="WedderOne">
                <span asp-validation-for="WedderOne"></span>
            </div>
            <div>
                <label>Wedder Two:</label>
                <input type="text" asp-for="WedderTwo">
                <span asp-validation-for="WedderTwo"></span>
            </div>
            <div>
                <label>Date:</label>
                <input type="date" asp-for="Date">
            </div>
            <div>
                <label>Address:</label>
                <input type="text" asp-for="Address">
                <span asp-validation-for="Address"></span>
            </div>
            <button type="submit">Create</button>
        </form>
    </div>
</div>