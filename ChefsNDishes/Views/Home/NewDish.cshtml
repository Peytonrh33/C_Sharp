@{
    ViewData["Title"] = "Home Page";
}

@model Dish
<div>
    <div>
        @await Html.PartialAsync("_Navbar")
    </div>
    <div>
        <h2>Add a Dish</h2>
    </div>
    <form asp-action="CreateDish" method="post">
        <div>
            <div>
                <label></label>
                <input type="text" asp-for="Name">
            </div>
            <div>
                <label></label>
                <input type="number" asp-for="Calories">
            </div>
        </div>
        <div>
            <select asp-for="ChefId">
                @foreach (Chef c in ViewBag.AllChefs)
                {
                    <option value="@c.ChefId">@c.Name</option>
                }
            </select>
        </div>
        <div>
            <select asp-for="Tastiness">
                <option>1</option>
                <option>2</option>
                <option>3</option>
                <option>4</option>
                <option>5</option>
            </select>
        </div>
        <div>
            <button type="submit">Add Dish</button>
        </div>
    </form>
</div>