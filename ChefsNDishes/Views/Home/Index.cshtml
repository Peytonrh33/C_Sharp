@{
    ViewData["Title"] = "Home Page";
}

@model List<Chef>
<div class="text-center">
    <div>
        @await Html.PartialAsync("_Navbar")
    </div>
    <div>
        <h2>Check out our roster of Chefs!</h2>
    </div>
    <div>
        <table>
            <thead>
                <tr>
                    <th>Name</th>
                    <th>Age</th>
                    <th># of Dishes</th>
                </tr>
            </thead>
            <tbody>
                @foreach(Chef c in Model)
                {
                    <tr>
                        <td>@c.Name</td>
                        <td>@c.Age</td>
                        <td>@c.AllDishes.Count</td>
                    </tr>
                }
                
            </tbody>
        </table>
    </div>
</div>
